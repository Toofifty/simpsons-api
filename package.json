{
  "name": "simpsons-api",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "db": "docker-compose up -d",
    "dev": "yarn db && env-cmd nodemon -I --exec node --experimental-specifier-resolution=node --loader ts-node/esm ./src/index.ts",
    "start": "env-cmd node dist/index.js",
    "mikro": "MIKRO_ORM_DYNAMIC_IMPORTS=1 NODE_OPTIONS=\" --experimental-specifier-resolution=node --loader ts-node/esm\" mikro-orm"
  },
  "dependencies": {
    "@mikro-orm/cli": "^5.4.2",
    "@mikro-orm/core": "^5.4.2",
    "@mikro-orm/migrations": "^5.4.2",
    "@mikro-orm/mysql": "^5.4.2",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "fluent-ffmpeg": "^2.1.2"
  },
  "devDependencies": {
    "@tsconfig/node16-strictest-esm": "^1.0.3",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/fluent-ffmpeg": "^2.1.14",
    "@types/node": "^13.13.2",
    "@zeit/ncc": "^0.22.1",
    "env-cmd": "^10.1.0",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/mikro-orm.config.ts",
      "./dist/mikro-orm.config.js"
    ]
  }
}
